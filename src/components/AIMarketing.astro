<style>
	.ai-marketing {
		padding: 100px 0;
		background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
		position: relative;
		overflow: hidden;
	}
	
	.ai-marketing::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 20% 80%, rgba(95, 180, 156, 0.1) 0%, transparent 50%);
		pointer-events: none;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}
	
	.ai-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 64px;
		align-items: center;
	}
	
	.ai-badge {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: linear-gradient(135deg, #5FB49C 0%, #8dd0a2 100%);
		color: white;
		padding: 8px 16px;
		border-radius: 20px;
		font-size: 14px;
		font-weight: 600;
		margin-bottom: 24px;
		box-shadow: 0 4px 12px rgba(95, 180, 156, 0.3);
	}
	
	.badge-icon {
		font-size: 16px;
	}
	
	.ai-text h2 {
		font-size: 42px;
		font-weight: 700;
		line-height: 1.2;
		margin: 0 0 24px;
		color: #1f2937;
	}
	
	.ai-text p {
		font-size: 20px;
		line-height: 1.6;
		margin: 0 0 40px;
		color: #6b7280;
	}
	
	.ai-features {
		margin-bottom: 48px;
	}
	
	.ai-feature-item {
		display: flex;
		gap: 16px;
		margin-bottom: 24px;
		padding: 20px;
		background: white;
		border-radius: 12px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
		border: 1px solid #f3f4f6;
		transition: all 0.3s ease;
	}
	
	.ai-feature-item:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(95, 180, 156, 0.1);
	}
	
	.ai-feature-item:last-child {
		margin-bottom: 0;
	}
	
	.ai-feature-item .feature-icon {
		font-size: 24px;
		width: 48px;
		height: 48px;
		background: #f3f4f6;
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}
	
	.feature-content h4 {
		font-size: 18px;
		font-weight: 600;
		margin: 0 0 8px;
		color: #1f2937;
	}
	
	.feature-content p {
		font-size: 14px;
		color: #6b7280;
		margin: 0;
		line-height: 1.5;
	}
	
	.ai-stats {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 32px;
	}
	
	.stat {
		text-align: center;
	}
	
	.stat-number {
		display: block;
		font-size: 32px;
		font-weight: 700;
		color: #5FB49C;
		margin-bottom: 8px;
	}
	
	.stat-label {
		font-size: 14px;
		color: #6b7280;
		font-weight: 500;
	}
	
	.ai-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	
	.ai-dashboard {
		background: white;
		border-radius: 20px;
		padding: 24px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		border: 1px solid #e5e7eb;
		width: 100%;
		max-width: 480px;
		animation: float 6s ease-in-out infinite;
	}
	
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}
	
	.dashboard-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 24px;
		padding-bottom: 16px;
		border-bottom: 1px solid #f3f4f6;
	}
	
	.header-title {
		display: flex;
		align-items: center;
		gap: 8px;
		font-weight: 600;
		color: #1f2937;
	}
	
	.ai-icon {
		font-size: 20px;
	}
	
	.status-indicator {
		display: flex;
		align-items: center;
		gap: 6px;
		font-size: 12px;
		color: #10b981;
	}
	
	.status-dot {
		width: 8px;
		height: 8px;
		background: #10b981;
		border-radius: 50%;
		animation: pulse 2s infinite;
	}
	
	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}
	
	.campaign-preview {
		margin-bottom: 24px;
	}
	
	.campaign-item {
		background: #f8fafc;
		border-radius: 12px;
		padding: 16px;
		margin-bottom: 16px;
		border-left: 4px solid #5FB49C;
	}
	
	.campaign-item:last-child {
		margin-bottom: 0;
	}
	
	.campaign-type {
		font-size: 12px;
		font-weight: 600;
		color: #5FB49C;
		text-transform: uppercase;
		margin-bottom: 8px;
	}
	
	.campaign-content p {
		font-size: 14px;
		color: #374151;
		margin: 0 0 12px;
		line-height: 1.4;
		font-style: italic;
	}
	
	.campaign-metrics {
		display: flex;
		gap: 16px;
	}
	
	.metric {
		font-size: 11px;
		color: #6b7280;
		background: white;
		padding: 4px 8px;
		border-radius: 6px;
	}
	
	.ai-insights h4 {
		font-size: 16px;
		font-weight: 600;
		color: #1f2937;
		margin: 0 0 16px;
	}
	
	.insight-item {
		display: flex;
		align-items: center;
		gap: 8px;
		font-size: 13px;
		color: #6b7280;
		margin-bottom: 8px;
	}
	
	.insight-item:last-child {
		margin-bottom: 0;
	}
	
	.insight-icon {
		font-size: 14px;
	}
	
	@media (max-width: 768px) {
		.ai-marketing {
			padding: 80px 0;
		}
		
		.container {
			padding: 0 16px;
		}
		
		.ai-content {
			grid-template-columns: 1fr;
			gap: 48px;
		}
		
		.ai-text h2 {
			font-size: 32px;
		}
		
		.ai-text p {
			font-size: 18px;
		}
		
		.ai-stats {
			grid-template-columns: 1fr;
			gap: 24px;
		}
		
		.ai-dashboard {
			max-width: 100%;
			padding: 20px;
		}
		
		.campaign-metrics {
			flex-direction: column;
			gap: 8px;
		}
	}
</style>