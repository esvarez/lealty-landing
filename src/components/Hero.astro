<script>
	document.getElementById('heroSubscribeForm').addEventListener('submit', function(e) {
		e.preventDefault();
		
		const form = this;
		const email = document.getElementById('heroEmail').value;
		const submitBtn = form.querySelector('.btn-primary');
		const successMessage = document.getElementById('heroSuccessMessage');
		
		// Show loading state
		submitBtn.classList.add('loading');
		
		// Make API call to subscribe endpoint
		fetch('https://4vzz99xv8l.execute-api.us-west-1.amazonaws.com/dev/audience/add-contact', {
			method: 'POST',
			headers: {
				'Content-Type': 'application/json',
			},
			body: JSON.stringify({ email: email })
		})
		.then(response => {
			if (response.status === 200 || response.status === 201) {
				// Hide form and show success message
				form.style.display = 'none';
				successMessage.style.display = 'flex';
				
				// Update success message with response
				const successText = successMessage.querySelector('span');
				successText.textContent = 'Thank you! We\'ll notify you when Lealty is ready.';
			} else {
				// Show error message
				alert('Something went wrong. Please try again.');
			}
		})
		.catch(error => {
			console.error('Subscription error:', error);
			alert('Network error. Please check your connection and try again.');
		})
		.finally(() => {
			// Reset form and button state
			form.reset();
			submitBtn.classList.remove('loading');
		});
	});
</script>

